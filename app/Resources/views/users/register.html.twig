{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">


            <form class="form-horizontal" method="POST" action="{{ path('user_register_process') }}"
                  onsubmit="return Validate()" name="vform">
                <fieldset>

                    <legend>Register Form</legend>

                    <div class="form-group" id="username_div">
                        {% for message in app.flashes('exists_user') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <h5><label class="col-sm-3 control-label" for="user_fullName">Username</label></h5>
                        <div class="row">
                            <input value="{{ user.username|default(null) }}" type="text" name="user[username]" class="form-control col-sm-2"
                                   placeholder="Minimum 3 characters" id="user_error">
                            <h5><b>&nbsp;<span class="" id="name_error"></span></b></h5>
                        </div>
                    </div>

                    <div class="form-group" id="email_div">
                        {% for message in app.flashes('exists_email') %}
                            <div class="alert alert-danger">
                            {{ message }}
                        </div>
                        {% endfor %}
                        <h5><label class="col-sm-3 control-label">Email</label></h5>
                        <div class="row">
                            <input value="{{ user.email|default(null) }}" type="text" name="user[email]" class="form-control col-sm-2"
                                   placeholder="Enter valid email"
                                   id="user_email">
                            <h5><b>&nbsp;<span id="email_error"></span></b></h5>
                        </div>
                    </div>

                    <div class="form-group" id="password_div">
                        <h5><label class="col-sm-3 control-label">Password</label></h5>
                        <div class="row">
                            <input type="password" name="user[password][first]" class="form-control col-sm-2"
                                   id="user_password_first">
                            <h5><b>&nbsp;<span id="password_error"></span></b></h5>
                        </div>
                    </div>

                    <div class="form-group" id="pass_confirm_div">
                        <h5><label class="col-sm-3 control-label">Password confirm</label></h5>
                        <div class="row">
                            <input type="password" name="user[password][second]" class="form-control col-sm-2"
                                   id="user_password_second">
                            <h5><b>&nbsp;<span id="password_confirm_error"></span></b></h5>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('event_index') }}">Cancel</a>
                            <input type="submit" name="register" value="Register" class="btn btn-primary">
                        </div>
                    </div>
                    {{ form_row(form._token) }}
                </fieldset>
            </form>

        </div>
    </div>

{% endblock %}	 
