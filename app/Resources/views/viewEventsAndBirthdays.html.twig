            {% endif %}
        </div>
    {% endfor %}

    {% for birthday in birthdays %}
        <div>
            {% if "now"|date('m-d') == birthday.getBornOn|date('m-d') %}
                <div class="alert-info">Happy Birthday to {{ birthday.name }}
{% if "now"|date('Y') - birthday.getBornOn|date('Y') == 0 %}
{{ "today" }}
{% else %}
age {{ "now"|date('Y') - birthday.getBornOn|date('Y') }} ( {{birthday.getBornOn|date('d.m.Y') }} )
{% endif %}
</div>
            {% endif %}
        </div>
    {% endfor %}
</div>
{% endblock body %}
