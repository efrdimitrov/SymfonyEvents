{% block body %}
<div>
    {% for event in events %}
        <div>
            {% if "now"|date('Y-m-d') == event.dateEvent|date('Y-m-d') %}
                <div class="alert-info">event
{{ event.name }} |
{{ event.categoryName }} |
{{ event.description }} |
{{ "now"|date("d.m.Y") }}
