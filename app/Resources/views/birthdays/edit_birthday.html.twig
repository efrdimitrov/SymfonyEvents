{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form name="authenticate" class="form-horizontal" action="{{ path('edit_birthday', {id: birthday.id}) }}" method="post">
                <fieldset>
                    <legend>Edit Birthday</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="event_name">Name</label>
                        <div class="col-sm-4 ">
                            <input value="{{ birthday.name }}" class="form-control" id="event_name" placeholder="Name" name="birthday[name]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="event_date">Born On</label>
                        <div class="col-sm-4 ">
                            <input value="{{ birthday.bornOn|date('Y-m-d') }}" type="date" class="form-control" id="event_date" placeholder="Born On"
                                   name="birthday[bornOn]">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('my_birthdays') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>


{% endblock %}

