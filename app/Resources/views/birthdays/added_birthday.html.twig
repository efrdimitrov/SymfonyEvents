 {% extends 'base.html.twig' %}

    {% block main %}

        <div class="container body-content span=8 offset=2">
            <div class="well">
                <form name="authenticate" class="form-horizontal" action="{{ path('added_birthday') }}" method="post">
                    <fieldset>
                        <legend>Add New Birthday</legend>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="event_name">Name</label>
                            <div class="col-sm-4 ">
                                <input class="form-control" id="event_name" placeholder="Name" name="birthday[name]">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="event_date">Born On</label>
                            <div class="col-sm-4 ">
                                <input type="date" class="form-control" id="event_date" placeholder="Date"
                                       name="birthday[bornOn]">
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <a class="btn btn-default" href="{{ path('all_birthdays') }}">Cancel</a>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>

{% endblock %}

