                    <div class="navbar-form">{{ event.name }}</div>
                    <div class="navbar-form">{{ event.categoryName }}</div>
                    <div class="navbar-form">{{ event.description }}</div>
                    <div class="navbar-form">{{ event.dateEvent|date('d.m.Y') }}</div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
