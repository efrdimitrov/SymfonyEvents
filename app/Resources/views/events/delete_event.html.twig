{% extends 'base.html.twig' %}

{% block main %}

<div class="container body-content span=8 offset=2">
    <div class="well">
        <form name="authenticate" class="form-horizontal" action="{{ path('delete_event', {id: event.id}) }}" method="post">
            <fieldset>
                <legend>Delete Event</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="event_name">Name</label>
                    <div class="col-sm-4 ">
                        <input disabled value="{{ event.name }}" class="form-control" id="event_name" placeholder="Name" name="event[name]">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="category">Category
                        <select disabled name="event[categoryName]">
                            {% for category in categories %}
                            <option>{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </label>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="description">Description</label>
                    <div class="col-sm-4">
                        <textarea disabled class="form-control" id="description" name="event[description]">{{ event.description }}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="event_date">Date</label>
                    <div class="col-sm-4 ">
                        <input disabled value="{{ event.dateEvent|date('Y-m-d') }}" type="date" class="form-control" id="event_date" placeholder="Name"
                               name="event[dateEvent]">
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('my_events') }}">Cancel</a>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>

{% endblock %}

