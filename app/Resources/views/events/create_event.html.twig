{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form name="authenticate" class="form-horizontal" action="{{ path('all_events') }}" method="post">
                <fieldset>
                    <legend>Add New Event</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="event_name">Name</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="event_name" placeholder="Name" name="_name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category">Category
                            <select name="category_name">
                                {% for category in categories %}
                                <option>{{ category.getName }}</option>
                               {% endfor %}
                            </select>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="description">Description</label>
                        <div class="col-sm-4">
                            <textarea class="form-control" id="description" name="_description"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="event_date">Date</label>
                        <div class="col-sm-4 ">
                            <input type="date" class="form-control" id="event_date" placeholder="Name"
                                   name="_date_event">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('user_profile') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>


{% endblock %}